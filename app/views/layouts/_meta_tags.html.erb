<% if content_for?(:title) %>
  <title><%= content_for(:title) %></title>
  <meta name="title" content="<%= content_for(:title) %>">
  <meta name="og:title" content="<%= content_for(:title) %>">
  <meta name="twitter:title" content="<%= content_for(:title) %>">
<% else %>
  <title>Help-QA.com</title>
  <meta name="title" content="Help-QA.com">
  <meta name="og:title" content="Help-QA.com">
  <meta name="twitter:title" content="Help-QA.com">
<% end %>

<% if content_for?(:description) %>
  <meta name="description" content="<%= content_for(:description) %>">
  <meta name="og:description" content="<%= content_for(:description) %>">
  <meta name="twitter:description" content="<%= content_for(:description) %>">
<% else %>
  <meta name="description" content="Resurrection of the old Help.com site from 2008. Welcoming new and old helpers to ask questions and give answers.">
  <meta name="og:description" content="Resurrection of the old Help.com site from 2008. Welcoming new and old helpers to ask questions and give answers.">
  <meta name="twitter:description" content="Resurrection of the old Help.com site from 2008. Welcoming new and old helpers to ask questions and give answers.">
<% end %>

<meta name="keywords" content="help, help.com, questions and answers, Q&amp;A, help me, help us, assistance, lost">

<meta name="image" content="<%= image_url('helpqa-thumbnail.png') %>">
<meta name="og:image" content="<%= image_url('helpqa-thumbnail.png') %>">
<meta name="twitter:image" content="<%= image_url('helpqa-thumbnail.png') %>">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image:alt" content="Help-QA.com">

<meta property="og:type" content="website">
<meta property="og:url" content="<%= root_url %>">
<meta property="og:site_name" content="Help-QA">

<%= content_for(:meta) %>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">

<meta name="google-site-verification" content="H51VCAN_eyj8Y1CxF3yeleUbjJ5OQxiPk4-6qkODsHk" />

