<h1>Moderation Queue</h1>

<h6>Moderated Posts (<%= @posts.count %> most recent / <%= @posts.total_count %> total)</h6>
<ol>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %></li>
  <% end %>
</ol>

<h6>Moderated Replies (<%= @replies.count %> most recent / <%= @replies.total_count %> total)</h6>
<ol>
  <% @replies.each do |reply| %>
    <li><%= link_to truncate(reply.body, length: 100, omission: "..."), post_path(reply.post, anchor: "reply-#{reply.id}") %></li>
  <% end %>
</ol>
