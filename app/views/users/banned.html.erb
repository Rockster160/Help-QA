<% if current_mod? %>
  <% if can?(:ban_users) %>
    <li>Unban User: <a href="<%= moderate_user_path(@user, ban: :none) %>" data-method="post">Unban</a></li>
  <% end %>
  <% if can?(:ip_banning) %>
    <li>
      Ip Ban User:
      <% if @user.ip_banned? %>
        <a href="<%= moderate_user_path(@user, ip_ban: :none) %>" data-method="post">Unban</a> -
      <% else %>
        <a href="<%= moderate_user_path(@user, ip_ban: :day) %>" data-method="post">1 day</a> -
        <a href="<%= moderate_user_path(@user, ip_ban: :week) %>" data-method="post">1 week</a> -
        <a href="<%= moderate_user_path(@user, ip_ban: :month) %>" data-method="post">1 month</a> -
        <a href="<%= moderate_user_path(@user, ip_ban: :permanent) %>" data-method="post">Perma-Ban</a>
      <% end %>
    </li>
  <% end %>
  <% if @user.perma_banned? %>
    <p>This user has been perma-banned.</p>
  <% else %>
    <p>Banned until: <%= @user.banned_until.to_formatted_s(:simple_with_time) %></p>
  <% end %>
<% end %>
<h1>Oh, dang.</h1>
<p>Very sorry, but this account has been banned.</p>
