<% content_for(:title) { "Account Settings &bull; HelperNow.co".html_safe } %>
<h1>Settings</h1>

<%= form_for @settings, url: account_settings_path, method: :post do |f| %>
  <% @settings.editable_properties.each do |property, (disable_method, description)| %>
    <div class="checkbox">
      <%= f.check_box property, disabled: disable_method.present? ? @settings.send(disable_method) : false %>
      <%= f.label property, description.presence || property.to_s.titleize %>
    </div>
  <% end %>
  <%= f.submit "Save", style: "margin-top: 20px;" %>
<% end %>
